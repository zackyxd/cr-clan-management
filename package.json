{
  "name": "cr-management-discord-bot",
  "version": "1.0.0",
  "main": "dist/bot.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "lint": "eslint",
    ".": "NODE_ENV=dev npx tsx src/bot.ts",
    "deploy-commands": "NODE_ENV=dev npx tsx src/deploy-commands.ts",
    "migrate:dev:up": "dotenv -e .env.dev npx node-pg-migrate up",
    "migrate:dev:down": "dotenv -e .env.dev -- npx node-pg-migrate down 1",
    "migrate:dev:down-all": "dotenv -e .env.dev -- npx node-pg-migrate down $(ls migrations | wc -l)",
    "migrate:dev:reset": "dotenv -e .env.dev -- npx node-pg-migrate down $(ls migrations | wc -l) && dotenv -e .env.dev -- npx node-pg-migrate up $(ls migrations | wc -l)",
    "migrate:test:up": "dotenv -e .env.test --quiet -- npx node-pg-migrate up",
    "migrate:test:down-all": "dotenv -e .env.test --quiet -- npx node-pg-migrate down $(ls migrations | wc -l)",
    "migrate:test:reset": "npm run migrate:test:down-all && npm run migrate:test:up",
    "start:dev": "npm run clean && tsc && NODE_ENV=dev node dist/bot.js",
    "start:prod": "npm run clean && tsc && NODE_ENV=prod node dist/bot.js",
    "worker:dev": "NODE_ENV=dev npx tsx src/worker.ts",
    "worker:prod": "npm run clean && tsc && NODE_ENV=prod node dist/worker.js",
    "test": "node --no-warnings --experimental-vm-modules $(npx --no-install which jest) --runInBand"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@tsconfig/node20": "^20.1.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "dotenv-cli": "^8.0.0",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "nsx": "^0.0.1",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript-eslint": "^8.37.0"
  },
  "dependencies": {
    "@types/pg": "^8.15.4",
    "axios": "^1.10.0",
    "axios-retry": "^4.5.0",
    "bottleneck": "^2.19.5",
    "bullmq": "^5.58.9",
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.0",
    "dotenv-flow": "^4.1.0",
    "fastq": "^1.19.1",
    "ioredis": "^5.8.0",
    "node-pg-migrate": "^8.0.3",
    "pad": "^3.3.0",
    "pg": "^8.16.3",
    "pg-format": "^1.0.4",
    "pg-pool": "^3.10.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.0.5"
  }
}
